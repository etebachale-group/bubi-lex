{
  "name": "bubi-lex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node -e \"try{require('next/package.json')}catch(e){console.error('Next.js no est√° instalado. Ejecuta: npm install'); process.exit(1)}\" && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:apply-schema": "node ./scripts/apply-schema.js",
    "db:migrate:spanish-text": "node ./scripts/migrate-spanish-to-text.js",
    "db:migrate:add-ipa": "node ./scripts/add-ipa-column.js",
    "seed:dictionary": "node ./scripts/seed-dictionary.js",
    "seed:dictionary:direct": "node ./scripts/seed-dictionary-direct.js",
    "db:ensure-fulltext": "node ./scripts/ensure-fulltext-index.js",
    "ipa:reconcile": "node ./scripts/reconcile-ipa.js --file ./db/ipa-mapping.sample.json --dry-run",
    "ipa:update": "node ./scripts/reconcile-ipa.js --file ./db/ipa-mapping.sample.json",
    "dict:parse-md": "node ./scripts/parse-markdown-dictionary.js",
    "dict:import-md": "node ./scripts/parse-markdown-dictionary.js ./db/dictionary.md && npm run seed:dictionary ./db/seed-dictionary.json",
    "dev:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-and-smoketest.ps1",
    "dev:setup:clean": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-and-smoketest.ps1 -Clean",
    "dev:setup:seed": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-and-smoketest.ps1 -SeedFile ./db/seed-dictionary.json"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "mysql2": "^3.11.3",
    "next": "^15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^3.4.14",
    "typescript": "^5"
  }
}
